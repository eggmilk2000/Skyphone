{{#each products}}
<div class="row" id="row3">
    {{#each this}}
    <div class="col-sm-3 col-md-2 col-lg-2 border border-dark">
        <div class="thumbnail">
            <img src="{{ this.imagePath }} " alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{ this.title }}</h3>
                <p class="price">{{ this.price }} vnđ</p>
                <p class="description">{{ this.description }}</p>
                <hr>
                <p><a href="/shop/add-to-cart/{{this._id}}" class="btn btn-success" role="button">Thêm vào giỏ</a> </p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}

<hr>
{{> footer}}